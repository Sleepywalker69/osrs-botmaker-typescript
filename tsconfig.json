{
	"compileOnSave": false,
	"extends": ["@tsconfig/node20/tsconfig"],
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": false,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["ESNext"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@deafwave/osrs-botmaker-types": [
				"node_modules/@deafwave/osrs-botmaker-types/dist/src/index.d.ts"
			]
		},
		"checkJs": false,
		"allowJs": false,
		"resolveJsonModule": true,
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"types": ["node"],
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"plugins": []
	},
	"include": ["src/**/*.ts", "src/types/**/*.d.ts"],
	"exclude": ["node_modules", "tmp"]
}

